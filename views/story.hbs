    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,300;0,400;0,500;0,700;0,900;1,300;1,400;1,700;1,900&display=swap');
    </style>
</head>

<body class="roboto-regular" style="background-color: #696a6b;">
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="d-flex justify-content-end align-items-center mb-4">
                    <form action="/download" method="post"> <button class="btn btn-primary">Download Story</button>
                    </form>
                </div>
                <div id="titlePage" class="card">
                    <div class="card-body">
                        <h1>{{story.title}}</h1>
                        <p>{{story.description}}</p>
                    </div>
                </div>
            </div>
            {{#each story.story}}
            <div class="carousel-item">
                <div class="card storyPage">
                    <img src="{{image}}" class="card-img-top" alt="{{alt}}">
                    <div class="card-body">
                        <h5 class="card-title">Page {{page}}</h5>
                        <p class="card-text">{{text}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
